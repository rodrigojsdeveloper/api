{
  "name": "full-nodejs-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Rodrigodeveloperjr/full-nodejs-api.git",
  "author": "Rodrigodeveloperjr <rodrigojsdeveloper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
    "test": "cross-env NODE_ENV=test SECRET_KEY=secret_key jest",
    "type": "module",
    "build": "rm -rf ./dist && tsc",
    "start": "node ./dist/server.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "jest": "^29.3.1",
    "sqlite3": "^5.1.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11",
    "typescript": "^4.9.4",
    "yup": "^0.32.11"
  }
}
